    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Minimal",
            "program": "${workspaceFolder}/Minimal/sap",
            "args": ["/home/marvin/Media/Audiobooks/Snapshot.wav", "--verbose", "-s", "2"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Desktop",
            "program": "${workspaceFolder}/Desktop/sap",
            "args": ["--verbose", "-s", "2"],
            // "/home/marvin/Media/Audiobooks/DragonsEgg.m4b"
            // "--verbose", "-s", "2"
            // "/home/marvin/Media/Audiobooks/DragonsEggCheelaBook1_ep6.aax"
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "LLDB by PID",
            "pid": "${command:pickMyProcess}" // use ${command:pickProcess} to pick other users' processes
        },
        {
            "type": "lldb",
            "request": "custom",
            "name": "Custom LLDB",
            "targetCreateCommands": [
                "target create ${workspaceFolder}/Desktop/sap"
            ],
            "processCreateCommands": [
                "settings set target.run-args",
                "process launch"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "LLDB",
            "program": "${workspaceFolder}/Desktop/sap",
            "args": [
                "/home/marvin/Media/Audiobooks/Snapshot.wav",
                "/home/marvin/Media/Audiobooks/Snapshot2.mp3"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}